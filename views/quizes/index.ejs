        
        <p class="title2" >
        <% if (!filter) { %>
           Listado completo
        <% } else { %>
           Preguntas conteniendo : [<span style="color:#4040b0"> <%= filter %> </span>]
        <% } %>
        </p>
        
        <table>        
        <% var i; for(i=0; i<quizes.length; i++) { 
               var quiz = quizes[i];
        %>
            <tr>
               <td class="item-pregunta">
                  <a href="/quizes/<%= quiz.id %>"><%= quiz.pregunta %> </a>
               </td>
               <td class="admin-button">
                  <form method="get" action="/quizes/<%= quiz.id %>/edit">
                     <button type="submit">editar</button>
                  </form>
               </td>
               <td class="admin-button">
                  <form method="post" action="/quizes/<%= quiz.id %>?_method=delete">
                     <button type="submit" 
                       onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
                       borrar</button>
                  </form>
               </td>
            </tr>
        <% } %>
            <tr>
               <td> 
                  <a href="/quizes/new">
                     <button type="button">Crear pregunta</button>
                  </a>
                </td>
            </tr>
        </table>



